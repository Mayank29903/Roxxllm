# Firebase Environment Variables Template

# Copy this to your .env file and fill in your Firebase configuration

# Frontend Environment Variables (frontend/.env)
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id_here
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
VITE_FIREBASE_APP_ID=your_app_id_here

# Backend Environment Variables (backend/.env)
# Choose ONE of these methods for Firebase service account:

# Method 1: JSON content (recommended for production)
FIREBASE_SERVICE_ACCOUNT_JSON={
  "type": "service_account",
  "project_id": "your_project_id_here",...}

# Method 2: File path (recommended for development)
# FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Method 3: Default file location (place file in backend directory)
# File should be named: firebase-service-account.json